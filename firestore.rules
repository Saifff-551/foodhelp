rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin access: Allows any authenticated user to read/write any document.
    // This rule should be placed carefully as it can override more specific rules.
    // For true admin access, you might want to check for specific admin UIDs or custom claims.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // User Profiles
    // Anyone can read their own profile.
    // Anyone can create their own profile (if auth uid matches).
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
    }
    
    // Donations
    // Anyone can read donations (for now, maybe restrict later).
    // Only authenticated users can create donations.
    // Only the creator can update or delete their donation.
    match /donations/{donationId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.donorId;
    }
  }
}
